{
    "compileOnSave": false,
    "compilerOptions": {
        "paths": {
            "@widget-assets/*": [
                "./src/device-control-widget/assets/*",
                "./dist/widget-library/src/device-control-widget/assets"
            ]
        },
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "downlevelIteration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2016"
        ]
    },
    "angularCompilerOptions": {
      "fullTemplateTypeCheck": true,
      "strictInjectionParameters": true,
      "enableIvy": false
    }
}